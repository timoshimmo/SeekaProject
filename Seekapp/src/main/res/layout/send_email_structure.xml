<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_sort_toolbar_height"
            android:background="@color/background_gray"
            android:layout_alignParentTop="true"
            android:id="@+id/toolbar">

            <ImageButton
                android:layout_width="@dimen/unlocked_email_cancel_width"
                android:layout_height="@dimen/unlocked_email_cancel_width"
                android:id="@+id/imgEmailCancel"
                android:layout_centerVertical="true"
                android:src="@mipmap/new_cancel_icon"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

            <edu.freshfutures.seeka.CustomWidgets.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Email"
                android:id="@+id/txtPopupTitle"
                android:textColor="@color/mid_gray"
                android:textSize="@dimen/unlocked_email_tollbar_title"
                android:layout_centerInParent="true" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <edu.freshfutures.seeka.CustomWidgets.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:id="@+id/textView16"
                android:textSize="@dimen/email_popup_text_size"
                android:textColor="@color/light_gray"
                android:layout_gravity="center_vertical" />

            <edu.freshfutures.seeka.CustomWidgets.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uni@royalroads.com "
                android:id="@+id/txtEmailAddress"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/email_popup_text_size"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@color/background_gray">

            <edu.freshfutures.seeka.CustomWidgets.CustomEditTextLight
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/popupEmailMessage"
                android:layout_weight="0.6"
                android:background="@android:color/white"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/email_popup_text_size"
                android:textColor="@color/light_gray"
                android:lines="5"
                android:maxLines="6"
                android:gravity="top|left"
                android:textColorHint="@color/background_gray"
                android:hint="Message"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white_color"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp">

            <edu.freshfutures.seeka.CustomWidgets.CustomButtonTextLight
                android:layout_width="match_parent"
                android:layout_height="@dimen/sort_button_height"
                android:text="@string/btn_email_popup_text"
                android:id="@+id/btnUnlockSendEmail"
                android:background="@drawable/button_corners"
                android:textSize="@dimen/sort_btn_confirm_text_size"
                android:layout_marginLeft="@dimen/email_popup_margin_left_right"
                android:layout_marginRight="@dimen/email_popup_margin_left_right"
                android:textColor="@color/white_color"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>