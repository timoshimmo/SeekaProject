<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/group_height"
    android:background="@color/white_color">

    <edu.freshfutures.seeka.CustomWidgets.CustomTextViewRegular
        android:layout_width="@dimen/interest_text_width"
        android:layout_height="wrap_content"
        android:text="Study Library Support"
        android:id="@+id/txtInterestTitle"
        android:layout_centerVertical="true"
        android:textColor="@color/mid_gray"
        android:textSize="@dimen/services_text_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgInterests"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:scaleType="fitStart" />
</RelativeLayout>