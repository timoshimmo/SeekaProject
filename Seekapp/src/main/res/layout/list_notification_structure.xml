<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/menu_list_back">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_values_height_back">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/menu_image_margin_right"
            android:layout_marginLeft="@dimen/menu_image_margin_left"
            android:layout_centerVertical="true"
            android:id="@+id/menu_img_container">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_images_res" />

        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/menu_data_body"
            android:layout_toRightOf="@+id/img_container">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:id="@+id/menu_container">

                <edu.freshfutures.seeka.CustomWidgets.CustomTextViewMedium
                    android:id="@+id/text_menu_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/list_settings_title"
                    android:textColor="@color/mid_gray"
                    android:gravity="center_vertical"
                    android:paddingBottom="1dp"
                    android:textSize="@dimen/menu_value_text_size" />

                <edu.freshfutures.seeka.CustomWidgets.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_world"
                    android:id="@+id/text_menu_notify"
                    android:layout_gravity="center_vertical|right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/menu_text_size"
                    android:layout_marginRight="@dimen/menu_image_margin_left"
                    android:gravity="center"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_value_divider_height"
                android:background="@color/background_gray"
                android:id="@+id/menu_bottom_line"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
