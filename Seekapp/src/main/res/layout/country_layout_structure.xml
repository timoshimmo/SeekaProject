<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_row_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/searchBody"
        android:backgroundTintMode="multiply">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_search_courses"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:background="#000000"
            android:alpha="0.5" />

        <ImageView
            android:layout_width="335dp"
            android:layout_height="105dp"
            android:id="@+id/imgSearchCityMonuments"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/imgSearchCityMonuments"
            android:id="@+id/countryNameLayout"
            android:paddingRight="40dp"
            android:layout_marginBottom="2dp">

            <edu.freshfutures.seeka.CustomWidgets.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/txtSearchCountry"
                android:textColor="#ffffff"
                android:textSize="@dimen/search_ctry_name_text_size"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>