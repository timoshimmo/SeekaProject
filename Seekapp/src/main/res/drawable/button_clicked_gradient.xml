<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#00a3e0"/>

            <corners
                android:bottomRightRadius="4.5dp"
                android:bottomLeftRadius="4.5dp"
                android:topLeftRadius="4.5dp"
                android:topRightRadius="4.5dp"/>

            <stroke android:width="1dip" android:color="#00a3e0" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#00a3e0"/>

            <corners
                android:bottomRightRadius="4.5dp"
                android:bottomLeftRadius="4.5dp"
                android:topLeftRadius="4.5dp"
                android:topRightRadius="4.5dp"/>

            <stroke android:width="2dip" android:color="@color/seeka_blue" />
            <gradient android:angle="90" android:startColor="#00a3e0" android:centerColor="@color/seeka_blue" android:endColor="#00a3e0"/>
        </shape>
    </item>
</layer-list>