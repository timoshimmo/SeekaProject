<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="@dimen/sort_structure_row_height"
    android:background="@android:color/transparent">

    <edu.freshfutures.seeka.CustomWidgets.CustomTextViewRegular
        android:layout_width="@dimen/interest_text_width"
        android:layout_height="wrap_content"
        android:text="Category"
        android:id="@+id/txtInterestTitle"
        android:layout_centerVertical="true"
        android:textColor="@color/super_light_gray"
        android:textSize="@dimen/sort_list_structure_text_size"
        android:layout_marginLeft="@dimen/sort_text_margin_left" />

    <ImageButton
        android:layout_width="@dimen/filter_year_down_arrow_width"
        android:layout_height="@dimen/filter_year_down_arrow_height"
        android:id="@+id/imgUpButton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/sort_text_margin_left"
        android:src="@mipmap/up_arrow"
        android:background="@android:color/transparent"
        android:visibility="invisible" />

</RelativeLayout>